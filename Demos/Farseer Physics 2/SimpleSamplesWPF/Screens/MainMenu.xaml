<UserControl x:Class="SimpleSamplesWPF.Screens.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="menuStack" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
<!--        <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" -->
<!--                   FontFamily="Courier New" FontSize="20" Foreground="White" >-->
<!--            NOTE: Toggle between Normal view and Debug view by pressing F1-->
<!--        </TextBlock>-->
        <TextBlock Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                   FontFamily="Courier New" FontSize="22" TextAlignment="Right">
            <Hyperlink NavigateUri="http://www.codeplex.com/FarseerPhysics" Foreground="White" RequestNavigate="getFarseer_RequestNavigate">
                Learn More About the Farseer Physics Engine
            </Hyperlink>
        </TextBlock>
    </Grid>
</UserControl>
